<%- include("partials/header") %>
  <body class="party">
    <header>
      <a href="/"><div class="logo"><h1>LOGO</h1></div></a>
      <div class="profile-icon"></div>
    </header>
    <h1>Welcome to, <span>Rahul's Birthday Bash</span></h1>
    <div class="party-grid">
      <div class="column-1">
        <div class="party-intro">
          <div class="card-header">
            <h3>Hosted By, <span>Ashish Kujur</span></h3>
            <p>Edit Discription</p>
          </div>
          <hr>
          <p id="party-description">
            Welcome to Rahul's 20th birthday, lets make this party worth remembering.
            Feel free to add any party item, Highest contribution gets a lap dance from
            the birthday boy ;)
          </p>
          <!-- Displays latest 4 participants -->
          <div class="participants">
            <p>Participants</p>
            <div class="participant-list">
              <div class=""></div>
              <div class=""></div>
              <div class=""></div>
            </div>
          </div>
          <!-- End of Display latest 4 participants -->
        </div>
      </div>
      <div class="column-2">
        <div class="party-cta">
          <!-- Total contribution by all members -->
          <h1>Contribution : <span>Rs. 5000</span></h1>
          <div class="btn-wrapper">
            <button class="btn-blue-hollow" type="button" name="go-home">Go home</button>
            <button class="btn-blue" type="button" name="exit-party" onclick="popup(2);">Exit Party</button>  <!-- Popup that asks for exit party confirmation -->
          </div>
        </div>
        <div class="party-items">
          <div class="card-header">
            <h3>Party Items</h3>
            <!-- total cost o unpurchased item -->
            <h3>Rs. 2100</h3>
          </div>
          <hr>
          <!-- New items get appended here $(".item-list").innerHTML += <li>...</li> -->
          <ul class="item-list">
            <!-- Item to be populated dynamically with its data -->
            <li>
              <div class="item-icon" style="background-image: url(/media/icons/cake.jpg);"></div>
              <div class="item-content">
                <div class="item-detail">
                  <p class="name">Vanilla ice-cream cake</p>
                  <p class="quantity">Quantity : 1</p>
                  <p class="cost">Rs. 700</p>
                </div>
                <div class="item-ops">
                  <div class="options"></div>
                  <label class="custom-checkbox">
                    <input type="checkbox" checked="checked"> <!-- Mark item as purchased -->
                    <span class="checkmark"></span>
                  </label>
                </div>
              </div>
            </li>

            <li>
              <div class="item-icon" style="background-image: url(/media/icons/soda.jpg);"></div>
              <div class="item-content">
                <div class="item-detail">
                  <p class="name">Vanilla ice-cream cake</p>
                  <p class="quantity">Quantity : 1</p>
                  <p class="cost">Rs. 700</p>
                </div>
                <div class="item-ops">
                  <div class="options"></div>
                  <label class="custom-checkbox">
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                  </label>
                </div>
              </div>
            </li>

            <li>
              <div class="item-icon" style="background-image: url(/media/icons/soda.jpg);"></div>
              <div class="item-content">
                <div class="item-detail">
                  <p class="name">Vanilla ice-cream cake</p>
                  <p class="quantity">Quantity : 1</p>
                  <p class="cost">Rs. 700</p>
                </div>
                <div class="item-ops">
                  <div class="options"></div>
                  <label class="custom-checkbox">
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                  </label>
                </div>
              </div>
            </li>
          </ul>
          <!-- End of item list -->
          <div class="add-item" onclick="popup(1)"></div>
        </div>
      </div>
    </div>
  </body>
  <!-- Overlay code to contribution form -->
  <div class="overlay">
    <div class="popup">
      <header>
        <h2>Contribute to the party</h2>
        <div class="close-icon" onclick="popup(0)"></div>
      </header>
      <div class="party-entry"></div>
      <form class="" action="/party/:id/contribution" method="post">
        <label for="contribution">Contribution</label>
        <input type="text" name="contribution" value="0">
        <input class="btn-pink" type="submit" name="" value="Pay">
      </form>
    </div>
  </div>
  <!-- End of Overlay code to contribution form -->

  <!-- Overlay code to add new item -->
  <div class="overlay">
    <div class="popup">
      <header>
        <h2>Add New Item</h2>
        <div class="close-icon" onclick="popup(1)"></div>
      </header>
      <form class="" action="/party/:id/item" method="post">
        <label for="item-category">Select item category</label>
        <select class="" name="item-category">
            <option value="">cake</option>
            <option value="">soda</option>
            <option value="">pizza</option>
            <option value="">balloon</option>
        </select>
        <label for="item-priority">Select item priority</label>
        <select class="" name="item-priority">
            <option value="">1</option>
            <option value="">2</option>
            <option value="">3</option>
        </select>
        <label for="item-name">Name</label>
        <input type="text" name="item-name" placeholder="Item name" value="" required>
        <label for="item-cost">Cost</label>
        <input type="text" name="item-cost" placeholder="Cost" value="" required>
        <label for="item-cost">Quantity</label>
        <input type="text" name="item-cost" placeholder="Cost" value="1" required>
        <input class="btn-blue" type="submit" name="" value="Add Item">
      </form>
    </div>
  </div>
  <!-- End of Overlay code to add new item -->
  <script type="text/javascript" src="/js/jquery-3.4.1.min.js"></script>
  <script type="text/javascript">
    function popup(i)
    {
      $(".overlay").eq(i).toggleClass("active");
    }
  </script>
<%- include("partials/footer") %>
