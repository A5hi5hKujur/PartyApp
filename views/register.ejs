<%- include("partials/header") %>
<body class="sign-up" onload="">
    <header>
      <a href="/"><div class="logo"><h1>LOGO</h1></div></a>
    </header>
    <div class="wrapper">
      <div class="sign-up-banner"></div>
      <div class="sign-up-content">
        <!-- Sign in form -->
        <form id="signup-form" action="/register" method="post">
          <h1>Sign Up</h1>
          <!-- Check if the entered username matches with any username -->
          <input type="text" name="username" value="" placeholder="Username" required/>
          <!-- Throw this error if you are trying to login with an id that already exists -->
          <p id="username-warning">Username not available</p>
          <input type="password" name="password" value="" placeholder="Password" required/>
          <input type="password" name="confirm-password" value="" placeholder="Confirm Password" required/>
          <input type="submit" class="btn-blue" value="Sign Up">
          <!-- Error when passwords dont match-->
          <p id="password-warning">Passwords dont match</p>
          <h2 style="text-align : center;">Or</h2>
            <a href="/login">
              <button type="button" class="btn-pink" name="button" id="sign-in-btn">Sign In</button>
            </a>
        </form>
        <!-- End of Sign in form -->
      </div>
    </div>
  </body>
  <script type="text/javascript" src="/js/jquery-3.4.1.min.js"></script>
  <script type="text/javascript">

    let usernames = ["ravi.mnnit", "ashishxenon", "namank63"];
    $('input[type="text"]').on("input", function() {
      // Username from sign-in form with no space at start and end
      var enteredUserName = $('input[type="text"]').val().trim();
      // Check if username already exists or not
      for(var i=0; i<usernames.length; i++) {
        if(enteredUserName === usernames[i]) {
          $('#username-warning').css("display", "block");
          break;
        }
        $('#username-warning').css("display", "none");
      }
    });

  </script>
